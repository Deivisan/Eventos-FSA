# ============================================
# EventosFSA - Configurações de Ambiente
# ============================================

# Servidor
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Frontend
FRONTEND_URL=http://localhost:5500

# JWT (Autenticação)
JWT_SECRET=sua-chave-secreta-super-segura-mude-em-producao
JWT_EXPIRES_IN=7d

# Banco de Dados (para futuro - SQLite em dev, PostgreSQL em prod)
DATABASE_URL=./data/eventosfsa.db

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@eventosfsa.com.br

# PIX (Banco do Brasil / Mercado Pago)
PIX_API_KEY=your-pix-api-key
PIX_WEBHOOK_SECRET=your-webhook-secret

# Upload de Arquivos
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=debug
